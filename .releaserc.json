{
  "branches": ["main", "next"],
  "ci": true,
  "tagFormat": "${version}",
  "debug": true,
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          {
            "type": "breaking",
            "release": "major"
          },
          { "scope": "ci", "release": false }
        ]
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/git",
      {
        "assets": [
          "insights/gradle.properties",
          "insights/helm/Chart.yaml",
          "gateway/gradle.properties",
          "gateway/helm/Chart.yaml",
          "customer/gradle.properties",
          "customer/helm/Chart.yaml",
          "notification/gradle.properties",
          "notification/helm/Chart.yaml",
          "appointment/gradle.properties",
          "appointment/helm/Chart.yaml",
          "scheduler/gradle.properties",
          "scheduler/helm/Chart.yaml"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}